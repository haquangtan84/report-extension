<nodeTypes 
   xmlns:nt="http://www.jcp.org/jcr/nt/1.0" 
   xmlns:mix="http://www.jcp.org/jcr/mix/1.0" 
   xmlns:jcr="http://www.jcp.org/jcr/1.0" 
   xmlns:exo="http://www.exoplatform.com/jcr/exo/1.0">  

  <nodeType name="exo:customer" isMixin="false" hasOrderableChildNodes="false" primaryItemName="">
    <supertypes>
      <supertype>nt:base</supertype>
    </supertypes>    
    <propertyDefinitions>     
      <propertyDefinition name="exo:customerName" requiredType="String" autoCreated="false" mandatory="true"
        onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>     
      <propertyDefinition name="exo:custerAddress" requiredType="String" autoCreated="false" mandatory="true"
        onParentVersion="COPY" protected="false" multiple="false">
        <valueConstraints/>
      </propertyDefinition>      
    </propertyDefinitions>
    <childNodeDefinitions>
		<childNodeDefinition name="*" defaultPrimaryType="nt:file" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" sameNameSiblings="false" >
			<requiredPrimaryTypes>
				<requiredPrimaryType>nt:file</requiredPrimaryType>
			</requiredPrimaryTypes>
		</childNodeDefinition>
	</childNodeDefinitions>   
  </nodeType> 
  
  
 

</nodeTypes>
  